<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Browser" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6C4C4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#CC7E7E</item>

        <!--Enable transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Apply transitions-->
        <item name="android:windowEnterTransition">@transition/trans_anim</item>
        <item name="android:windowExitTransition">@transition/trans_anim</item>


        <!-- Customize your theme here. -->
    </style>
</resources>